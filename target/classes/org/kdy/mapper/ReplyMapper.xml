<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kdy.mapper.ReplyMapper">
	<insert id="write">
	    insert into reply(bno, reply, replyer) 
	    values(#{bno}, #{reply}, #{replyer})
	</insert>
    <select id="list" resultType="org.kdy.domain.ReplyDTO">
       select * from reply where bno=#{bno}
    </select>
     <select id="modify" resultType="org.kdy.domain.ReplyDTO">
      select * from reply where rno=#{rno}
   </select>
   <update id="update">
      update reply
      set reply = #{reply}
      where rno = #{rno}
   </update>
   <delete id="remove">
      delete from reply
      where rno = #{rno}
   </delete>
</mapper>